<%- include ('./_main') %>
<div style="padding: 20px;">
   <h1 style="padding: 20px;">
       Atualize seu perfil
   </h1>
   <div class="text-center border-primary mb-3" style="padding: 20px;">
      <form action="/edit" method="post">
         <input name="displayname" type="text" class="form-control" placeholder="Nome de exibição"
          value="<%= currentUser.displayName || "" %>"><br>
          <input name="telefone" type="text" class="form-control" placeholder="Telefone"
          value="<%= currentUser.telefone || "" %>"><br>
          <textarea name="bio" class="form-control"
          placeholder="Conte um pouco sobre você!"><%= currentUser.bio || "" %></textarea><br>
          <input type="submit" value="Atualizar" class="btn btn-primary btn-block">
      </form>
   </div>
</div>




<%- include ('./_footer') %>
