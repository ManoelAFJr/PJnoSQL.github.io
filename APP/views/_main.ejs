<!DOCTYPE html>
<html>

<head>

<meta charset="utf-8">
<title>Blog</title>
<link rel="stylesheet" href="../public/style.css" >
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" 
crossorigin="anonymous">
</head>
<style>
  body {
    background: url("https://i2.wp.com/files.123freevectors.com/wp-content/original/33077-free-turquoise-blur-background-image.jpg?w=600"); 
    background-position: top;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>

<body>

<div class="navbar bg-light" >

  <div class="container">

    <div class="navbar bg-light">
      <a class="navbar-brand " href="/">Mine Blog Student</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <% if (currentUser) { %>
        
        <li>
          <a class="navbar-brand" href="/edit">
            Ol√°, <%= currentUser.name() %>
          </a>
        </li>
        <li><a class="navbar-brand " href="/logout">Sair</a></li>
      <% } else { %>
        <li><a class="navbar-brand " href="/login">Entrar</a></li>
        <li><a class="navbar-brand " href="/signup">Cadastre-se</a></li>
      <% } %>
    </ul>

  </div>

</div>

<div class="container">

  <% errors.forEach(function(error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% }) %>

  <% infos.forEach(function(info) { %>
    <div class="alert alert-success" role="alert" >
      <%= info %>
    </div>
  <% }) %>
